        "/lists/{id}": {
            "get": {
                "tags": [
                    "RecordList"
                ],
                "summary": "Get details of a specific record list",
                "operationId": "getRecordList",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the record list",
                        "required": true,
                        "schema": {
                            "type": "integer"
